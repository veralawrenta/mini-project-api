generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ORGANIZER
}

enum Category {
  ENTERTAINMENT
  BUSINESS
  SPORT
  ART
  EDUCATION
}

enum City {
  MEDAN
  JAKARTA
  DENPASAR
  TIMIKA
  LOMBOK
  YOGYAKARTA
}

enum VenueType {
  PAID
  FREE
}

enum Status {
  WAITING_FOR_PAYMENT
  WAITING_FOR_ORGANIZER_CONFIRMATION
  ACCEPTED
  REJECTED
  EXPIRED
  CANCELED
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  password     String
  avatar       String?
  role         Role
  referralCode String?
  point        Int       @default(0)
  isVerified   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?

  events       Event[]
  transactions Transaction[]
  coupons      Coupon[]
  reviews      Review[]

  referralUsagesSent     ReferralUsage[] @relation("referrer")
  referralUsagesReceived ReferralUsage[] @relation("referred")

  @@map("users")
}

model Event {
  id          Int  @id @default(autoincrement())
  organizer   User @relation(fields: [organizerId], references: [id])
  organizerId Int

  title          String
  banner         String?
  description    String
  category       Category
  date           DateTime
  startTime      String?
  endTime        String?
  city           City
  venue          String
  address        String
  venueType      VenueType
  availableSeats Int
  price          Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  transactions Transaction[]
  reviews      Review[]
  vouchers     Voucher[]

  @@map("events")
}

model Voucher {
  id      Int   @id @default(autoincrement())
  event   Event @relation(fields: [eventId], references: [id])
  eventId Int

  voucherCode String
  discount    Int
  quantity    Int
  expiredAt   DateTime

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  transactions Transaction[]

  @@map("vouchers")
}

model Coupon {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int

  couponCode String
  expiredAt  DateTime
  isUsed     Boolean? @default(false)

  transactions Transaction[]

  @@map("coupons")
}

model Transaction {
  id      Int   @id @default(autoincrement())
  userId  Int
  user    User  @relation(fields: [userId], references: [id])
  eventId Int
  event   Event @relation(fields: [eventId], references: [id])

  quantity Int
  price    Int

  voucherId Int?
  voucher   Voucher? @relation(fields: [voucherId], references: [id])

  couponId  Int?
  coupon    Coupon? @relation(fields: [couponId], references: [id])
  pointUsed Int     @default(0)

  payment_date  DateTime?
  payment_proof String?
  status        Status

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews Review[]

  @@map("transactions")
}

model Review {
  id            String      @id @default(cuid())
  transactionId Int
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  rating        Int
  comment       String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  event   Event @relation(fields: [eventId], references: [id])
  eventId Int

  @@map("reviews")
}

model ReferralUsage {
  id Int @id @default(autoincrement())

  referrerId Int
  referrer   User @relation("referrer", fields: [referrerId], references: [id])

  referredId Int
  referred   User @relation("referred", fields: [referredId], references: [id])

  @@map("referralUsages")
}
